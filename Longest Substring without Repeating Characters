class Solution:
    def lengthOfLongestSubstring(self, s):
        substr = ""
        record = 0
        
        for char in s:
            if not substr:
                substr+=char
                continue
            if char not in substr:
                substr+=char
                continue
            else:
                if len(substr)>record:
                    record = len(substr)
                newind=substr.rfind(char)+1
                substr = substr[newind:]
                substr+=char
                continue
                
        if record<len(substr):
            record = len(substr)
        
        return record
